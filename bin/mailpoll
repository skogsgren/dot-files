#!/bin/bash
# syncs email, for use in e.g. systemd timers
# DEPENDENCIES:
#   isync
#   msmtp
#   msmtpq (/usr/libexec/msmtp/msmtpq
#   msmtp-queue
# USAGE:
#   mailpoll

MBSYNCPATH=$(which mbsync)
MSMTPQPATH=$(which msmtp-queue)
chronic "$MBSYNCPATH" -a
MSMTPQ_LOG=/dev/null chronic "$MSMTPQPATH" -r
