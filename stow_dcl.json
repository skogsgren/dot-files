{
	"bash": {
		"type": "text",
		"dest": "$HOME/.bashrc",
		"cfg": [
            "export FZF_DEFAULT_COMMAND='fdfind --type f'",
            "export FZF_ALT_C_COMMAND='fdfind --exclude={calibre,dl,R} --type d'",
			"source $HOME/.dot-files/.aliasrc",
			"source $HOME/.dot-files/tmux-autocomplete.sh",
			"source $HOME/.dot-files/nnn.bash",
			"tmux has-session 2>/dev/null && tmux ls",
			"export GOPATH=$HOME/.go",
			"export PATH=$PATH:$GOROOT/bin:$GOPATH/bin"
		]
	},

	"inputrc": {
		"type": "text",
		"dest": "$HOME/.inputrc",
		"cfg": [
			"set bell-style none",
     			"set show-all-if-unmodified on",
     			"set show-all-if-ambiguous on"
		]
	},

	"vim-minimal": {
		"type": "vim",
		"full": false,
		"files": [".vim", ".vimrc"]
	},

	"vim-base": {
		"type": "vim",
		"full": true,
		"files": [".vim"],
		"extras": ["prgrm.vim"]
	},

	"vim-full": {
		"type": "vim",
		"full": true,
		"files": [".vim", ".gvimrc", ".pylintrc"],
		"extras": ["prgrm.vim", "lsp.vim"]
	},

	"mpv": {
		"type": "files",
		"files": ["mpv"],
		"dest": "$HOME/.config"
	},

	"tmux": {
		"type": "files",
		"files": [".tmux.conf"],
		"dest": "$HOME"
	},

	"latexmkrc": {
		"type": "files",
		"files": [".latexmkrc"],
		"dest": "$HOME"
	},

	"xterm": {
		"type": "files",
		"files": [".Xresources"],
		"dest": "$HOME"
	},

    "black": {
        "type": "files",
        "files": ["black"],
        "dest": "$HOME/.config"
    }
}
