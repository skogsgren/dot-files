alias lofi247="mpv --no-resume-playback --no-video http://usa9.fastcast4u.com/proxy/jamz?mp=/1"
alias indie-rock="mpv --no-video --no-resume-playback https://somafm.com/indiepop130.pls"
alias boot-liquor="mpv --no-video --no-resume-playback https://somafm.com/bootliquor130.pls"
alias npr="mpv --no-video --no-resume-playback https://npr-ice.streamguys1.com/live.mp3"
alias oldtimeradio="mpv --no-video --no-resume-playback https://icecast.walmradio.com:8443/otr"
