alias lofi-radio="mpv --no-video --no-resume-playback https://www.youtube.com/watch?v=jfKfPfyJRdk"
alias update="sudo apt update && sudo apt upgrade && sudo apt autoremove && flatpak update"
alias egrep="egrep --color"
alias temp="while true; do clear && sensors | egrep '(Package id 0)|(fan1)'; sleep 1; done"
alias catc="pygmentize -g -O style=solarized-light"

alias tmuxs="tmux new-session -s"
alias tmuxa="tmux attach-session -t"

export LS_COLORS='di=1;31'
alias ls="ls -aF --color --group-directories-first"
alias ll="ls -alF"

alias vw="vim -c VimwikiDiaryIndex"
